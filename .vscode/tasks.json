// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Restart Load Balancers",
            "type": "shell",
            "command": "${workspaceFolder}/restart_load_balancers.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Remove Logs",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/remove_logs.py"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}